<Page class="page" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd" 
    screenOrientation="landscape" 
    actionBarHidden="true"
    xmlns:ui="nativescript-animated-circle">
    <GridLayout>
        <Image id="mountain" class="mountain" src="~/images/mountain.png"/>
        <Button id="start" text="Press here to start!" tap="{{ startVisualization }}" class="start-btn"/>
        <AbsoluteLayout columns="*, *, *, *" rows="auto, auto, auto, auto" horizontalAlignment="center" class="tab-content">
            <ui:AnimatedCircle
                backgroundColor="transparent"
                width="125"
                height="125"
                animated="true"
                animateFrom="0"
                rimColor="#803ca8"
                barColor="#f7858d"
                clockwise="true"
                rimWidth="175"
                progress="{{data.progress}}"
                textSize="12"
                textColor="white"
                text="{{data.timer}}"
                left="25"
                top="25" />
            
            <Label id="player1star1" left="110" top="0" text="★" class="star"/>
            <Label id="player1star2" left="140" top="0" text="★" class="star"/>
            <Label id="player1star3" left="170" top="0" text="★" class="star"/>
            <Label id="player1Name" left="100" top="0" text="{{data.playerName1}}" class="title"/>
            <Label id="player1HB" left="100" top="0" text="{{data.heartrate1}}" class="title"/>
            <Image id="player1" left="100" top="0" class="avatar" src="~/images/lol.jpg" stretch="aspectFill" />
            
            <Label id="player2star1" left="235" top="0" text="★" class="star"/>
            <Label id="player2star2" left="265" top="0" text="★" class="star"/>
            <Label id="player2star3" left="295" top="0" text="★" class="star"/>
            <Label id="player2Name" left="225" top="0" text="{{data.playerName2}}" class="title"/>
            <Label id="player2HB" left="225" top="0" text="{{data.heartrate2}}" class="title"/>
            <Image id="player2" left="225" top="0" class="avatar" src="~/images/lol.jpg" stretch="aspectFill" />
            
            <Label id="player3star1" left="360" top="0" text="★" class="star"/>
            <Label id="player3star2" left="390" top="0" text="★" class="star"/>
            <Label id="player3star3" left="420" top="0" text="★" class="star"/>
            <Label id="player3Name" left="350" top="0" text="{{data.playerName3}}" class="title"/>
            <Label id="player3HB" left="350" top="0" text="{{data.heartrate3}}" class="title"/>
            <Image id="player3" left="350" top="0" class="avatar" src="~/images/lol.jpg" stretch="aspectFill" />
            
            <Label id="player4star1" left="485" top="0" text="★" class="star"/>
            <Label id="player4star2" left="515" top="0" text="★" class="star"/>
            <Label id="player4star3" left="545" top="0" text="★" class="star"/>
            <Label id="player4Name" left="475" top="0" text="{{data.playerName4}}" class="title"/>
            <Label id="player4HB" left="475" top="0" text="{{data.heartrate4}}" class="title"/>
            <Image id="player4" left="475" top="0" class="avatar" src="~/images/lol.jpg" stretch="aspectFill" />
        </AbsoluteLayout>
    </GridLayout>
</Page>